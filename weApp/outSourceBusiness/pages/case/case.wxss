.container{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background-color: white;
}
.item-wrapper{
  margin-bottom: 40rpx;
}
.title,.item-title{
  width: 35%;
  margin:0 auto;
  text-align: center;
  display: block;
  padding-bottom: 4px;
  margin-bottom: 7px;
  border-bottom: 1px solid #F0F0F0;
  font-size: 40rpx;
  font-family: "Times New Roman";
  padding-top:0;
  margin-top:0;
}
.item-title{
  font-size: 32rpx;
  width: 50%;
  font-family: '';
  margin-top:20rpx;
  padding-bottom: 0px;
  margin-bottom: 1px;
  border-bottom: none;
}
.item-title-wrapper{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.item-sub-title{
  letter-spacing: 0px;
  font-size:28rpx;
  color:#A3A3A3;
}
.swiper-item{
  position: relative;
}
.swiper-intr{
  position: absolute;
  bottom:0;
  left:0;
  right: 0;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.1);
  color:white;
  font-size: 30rpx;
  line-height: 50rpx;
  letter-spacing: 1px;
  text-align: right;
  padding-right: 10px;
}




.item-wrapper{
  width:750rpx;
}
.scroll-view{
  width:100%;
  display: flex;
white-space: nowrap;
overflow: scroll;
}
.scroll-view image{
  width:420rpx;
  display: inline-block;
  margin:8rpx;
}



