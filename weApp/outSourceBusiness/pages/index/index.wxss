.container{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}
.header{
  width:100%;
  position: relative;
  padding: 0;
  margin: 0;
  overflow: hidden;
  font-size: 0;
}
.header .shadow-cover{
  font-size: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.shadow-cover>view{
  width: 100%;
}
.shadow-cover text{
  display: block;
  width: 100%;
  color:white;
  letter-spacing: 1px;
}
.shadow-cover .title{
  font-size:35px;
  text-align: center;
  margin-bottom: 15px;
  font-family: "Times New Roman";
}
.shadow-cover .sub-title{
  font-size: 16px;
  text-align: center;
  margin-bottom: 5px;
}
.container .home-bg{
  width:100%;
  padding: 0;
  margin: 0;
  border:none;
  font-size: 0;
}
