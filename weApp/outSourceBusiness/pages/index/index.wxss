.container{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background-color: #FAFAFA;
}
.header{
  width:100%;
  position: relative;
  padding: 0;
  margin: 0;
  overflow: hidden;
  font-size: 0;
}
.header .shadow-cover{
  font-size: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.shadow-cover>view{
  width: 100%;
}
.shadow-cover text{
  display: block;
  width: 100%;
  color:white;
  letter-spacing: 1px;
}
.shadow-cover .title{
  font-size:35px;
  text-align: center;
  margin-bottom: 15px;
  font-family: "Times New Roman";
}
.shadow-cover .sub-title{
  font-size: 16px;
  text-align: center;
  margin-bottom: 5px;
}
.container .home-bg{
  width:100%;
  padding: 0;
  margin: 0;
  border:none;
  font-size: 0;
}
.body-intro,.body-business-area{
  margin-top: 30rpx;
  width: 100%;
  text-align: center;

}
.body-intro .title,.body-business-area .title{
  margin: 0 auto;
  display: inline-block;
  text-align: center;
  padding-bottom: 8px;
  margin-bottom: 12px;
  border-bottom: 1px solid #F0F0F0;
  font-size: 40rpx;
  font-family: "Times New Roman";
}
.body-intro .content{
  display: block;
  text-align: left;
  font-size:32rpx;
  margin:0 30rpx 40rpx;
}

.body-business-area{
  background-color: white;
  padding-top:20px;
}
.body-business-area .title{
  margin-bottom: 3px;
  padding-bottom: 2px;
}

.body-business-area .sub-title{
    font-size:24rpx;
    color:#FAFAFA;
}
.body-business-area>text{
  display: block;
}
